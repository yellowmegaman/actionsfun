{
  "variables": {
    "app": "mmts-backend",
    "from": "gcr.io/titanium-messenger-001/base-openjdk:latest",
    "docker_registry": "gcr.io",
    "project_name": "titanium-messenger-001",
    "docker_username": "{{env `DOCKER_USERNAME`}}",
    "docker_password": "{{env `DOCKER_PASSWORD`}}",
    "tag":  "{{env `DRONE_BRANCH`}}{{env `DRONE_BUILD_NUMBER`}}",
    "scala_version": "{{env `SCALA_VERSION`}}",
    "project_version": "{{env `PROJECT_VERSION`}}",
    "drone_workspace": "{{env `DRONE_WORKSPACE`}}"
  },
  "builders":[
    {
      "type": "docker",
      "login": true,
      "login_server": "{{user `docker_registry`}}",
      "login_username": "{{user `docker_username`}}",
      "login_password": "{{user `docker_password`}}",
      "commit": true,
      "image": "{{user `from`}}",
      "run_command": ["-dit", "--name", "{{user `app`}}{{user `tag`}}", "{{.Image}}", "/bin/bash"],
      "changes": [
	"ENTRYPOINT [\"/usr/bin/mmts-backend.entrypoint\"]"
      ]
    }
  ],
  "provisioners": [
    {
        "type": "shell",
        "inline": [
	  "mkdir -p /etc/{{user `app`}} /usr/local/{{user `app`}} /var/log/{{user `app`}} /etc/{{user `app`}}/migration"
        ]
    },
    {
        "type": "file",
        "source": "{{user `drone_workspace`}}/msn-backend/{{user `app`}}.entrypoint",
        "destination": "/usr/bin/{{user `app`}}.entrypoint"
    },
    {
        "type": "file",
        "source": "{{user `drone_workspace`}}/msn-backend/{{user `app`}}.hcl",
        "destination": "/etc/consul-template/{{user `app`}}.hcl"
    },
    {
        "type": "file",
        "source": "{{user `drone_workspace`}}/geoipcity.mmdb",
        "destination": "/usr/local/{{user `app`}}/geoipcity.mmdb"
    },
    {
        "type": "file",
        "source": "{{user `drone_workspace`}}/msn-backend/target/scala-{{user `scala_version`}}/mmts-backend-assembly-{{user `project_version`}}.jar",
        "destination": "/usr/local/{{user `app`}}/{{user `app`}}.jar"
    },
    {
        "type": "file",
        "source": "{{user `drone_workspace`}}/server-config/templates/{{user `app`}}/",
        "destination": "/opt/consul-template"
    },
    {
        "type": "file",
        "source": "{{user `drone_workspace`}}/server-config/templates/{{user `app`}}/OktosCert.p12",
        "destination": "/etc/mmts-backend/OktosCert.p12"
    },
    {
        "type": "shell",
        "inline": [
          "mv /opt/consul-template/libyjpagent.so /etc/{{user `app`}}/"
        ]
    },
    {
        "type": "shell",
        "inline": [
	  "chmod +x /usr/bin/{{user `app`}}.entrypoint",
          "echo {{user `tag`}} | tee /etc/buildinfo",
          "echo backend.version={{user `tag`}} | tee -a /opt/consul-template/application.conf"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_registry`}}/{{user `project_name`}}/{{user `app`}}",
        "tag": "{{user `tag`}}"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_server": "{{user `docker_registry`}}",
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_registry`}}/{{user `project_name`}}/{{user `app`}}",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_server": "{{user `docker_registry`}}",
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ]
  ]
}
